{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "noEmit": true
  },
  "include": ["playwright.config.ts", "tests/browser/**/*.ts"],
  "exclude": ["deps", "node_modules", "assets", "_build"]
}
